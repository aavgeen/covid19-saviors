{
  "name": "@covid19-saviors/webapp",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "scripts": {
    "clean:build": "rm dist/bundle.js",
    "clean": "rm -rf node_modules",
    "watch:css": "postcss src/styles.css -o src/tailwind.css",
    "build:css": "postcss src/styles.css -o src/tailwind.css --env production",
    "start": "yarn watch:css && parcel src/index.html",
    "build": "yarn build:css && parcel build src/index.html",
    "prettier:base": "prettier --single-quote",
    "prettier:check": "yarn prettier:base --list-different \"src/**/*.+(js|jsx|json|md)\"",
    "prettier:fix": "yarn prettier:base --write \"src/**/*.+(js|jsx|json|md)\"",
    "lint:js": "eslint src/**/*.js src/**/*.jsx",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:css:fix": "yarn lint:css --fix",
    "lint:fix": "yarn lint:js:fix && yarn lint:css:fix",
    "test": "jest --coverage --passWithNoTests"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "eslint-plugin-prettier": "^3.1.3",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.2",
    "tailwindcss": "^1.2.0"
  }
}
