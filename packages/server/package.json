{
  "name": "@covid19-saviors/server",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/server.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/server.js",
    "build": "tsc",
    "start": "yarn build && yarn serve",
    "test": "jest --coverage",
    "deploy:dev": "gcloud app deploy --project covid19-savior-app --no-promote",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "yarn prettier:base -- --list-different \"src/**/*.ts\"",
    "prettier:fix": "yarn prettier:base -- --write \"src/**/*.ts\""
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "class-validator": "^0.10.0",
    "dotenv": "^8.1.0",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-helmet": "^5.1.0",
    "koa-jwt": "^3.6.0",
    "koa-router": "^7.4.0",
    "mongodb": "^3.3.2",
    "mongoose": "^5.6.12",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^25.2.1",
    "@types/koa": "^2.0.49",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/mongodb": "^3.3.1",
    "@types/mongoose": "^5.5.17",
    "@types/node": "^12.7.3",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  }
}
