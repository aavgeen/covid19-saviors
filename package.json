{
  "name": "covid19-saviors",
  "private": true,
  "version": "1.0.0",
  "repository": "https://github.com/aavgeen1/zero-hunger.git",
  "author": "Aavgeen Singh <contact@aavgeen.com>",
  "license": "MIT",
  "scripts": {
    "clean": "yarn clean:artifacts && yarn clean:packages && yarn clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rm -rf node_modules",
    "lint:js:common": "yarn workspace @covid19-saviors/common run lint:js",
    "lint:js:app": "yarn workspace @covid19-saviors/mobileapp run lint:js",
    "lint:js:server": "yarn workspace @covid19-saviors/server run lint",
    "lint:js:web": "yarn workspace @covid19-saviors/webapp run lint:js",
    "lint:js": "yarn lint:js:common && yarn lint:js:app && yarn lint:js:server && yarn lint:js:web",
    "lint:css:web": "yarn workspace @covid19-saviors/webapp run lint:css",
    "lint:css": "yarn lint:css:web",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:fix:common": "yarn workspace @covid19-saviors/common run lint:fix",
    "lint:fix:app": "yarn workspace @covid19-saviors/mobileapp run lint:fix",
    "lint:fix:server": "yarn workspace @covid19-saviors/server run lint:fix",
    "lint:fix:web": "yarn workspace @covid19-saviors/webapp run lint:fix",
    "lint:fix": "yarn workspaces run lint:fix",
    "prettier:common:fix": "yarn workspace @covid19-saviors/common run prettier:fix",
    "prettier:app:fix": "yarn workspace @covid19-saviors/mobileapp run prettier:fix",
    "prettier:server:fix": "yarn workspace @covid19-saviors/server run prettier:fix",
    "prettier:web:fix": "yarn workspace @covid19-saviors/webapp run prettier:fix",
    "prettier:fix": "yarn workspaces run prettier:fix",
    "prettier:common:check": "yarn workspace @covid19-saviors/common run prettier:check",
    "prettier:app:check": "yarn workspace @covid19-saviors/mobileapp run prettier:check",
    "prettier:server:check": "yarn workspace @covid19-saviors/server run prettier:check",
    "prettier:web:check": "yarn workspace @covid19-saviors/webapp run prettier:check",
    "prettier:check": "yarn workspaces run prettier:check",
    "test:web": "yarn workspace @covid19-saviors/webapp run test",
    "test:app": "yarn workspace @covid19-saviors/mobileapp run test",
    "test:server": "yarn workspace @covid19-saviors/server run test",
    "test:common": "yarn workspace @covid19-saviors/common run test",
    "test": "yarn workspaces run test",
    "build:web": "yarn workspace @covid19-saviors/webapp run build",
    "build:android": "yarn workspace @covid19-saviors/mobileapp run android",
    "build:ios": "yarn workspace @covid19-saviors/mobileapp run ios",
    "build:server": "yarn workspace @covid19-saviors/server run build",
    "start:server": "yarn workspace @covid19-saviors/server run start",
    "start:app": "yarn workspace @covid19-saviors/mobileapp run start",
    "start:web": "yarn workspace @covid19-saviors/webapp run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD",
      "pre-push": "lerna run --concurrency 1 --stream precommit --since HEAD && yarn test"
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "eslint": "6.8.0",
    "husky": "^4.2.5",
    "lerna": "^3.14.1",
    "parcel-bundler": "1.12.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
